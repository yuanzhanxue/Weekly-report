<form class="form-horizontal" method="post">
  <fieldset>
    <div class="control-group">
      <label class="control-label" for="username">User Name</label>
      <div class="controls">
        <input type="text" class="input-xlarge" id="username" name="username">
        <p class="help-block">Your name is used to login and display</p>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="password">Password</label>
      <div class="controls">
        <input type="password" class="input-xlarge" id="password" name="password">
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="password-repeat">Password repeat</label>
      <div class="controls">
        <input type="password" class="input-xlarge" id="password-repeat" name="password-repeat">
      </div>
    <div class="form-actions">
      <button type="submit" class="btn btn-primary">Register</button>
    </div>
  </fieldset>
</form>